# OMiPYME - Variables de Entorno
# Copiar este archivo a .env.local y configurar los valores

# ==================================================
# GENERAL
# ==================================================
NEXT_PUBLIC_SITE_URL=https://omipyme.uned.ac.cr
NEXT_PUBLIC_SITE_NAME="OMiPYME - Observatorio MIPYME UNED"
NODE_ENV=development

# ==================================================
# API BACKEND (Python FastAPI)
# ==================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
API_KEY=your-api-key-here

# ==================================================
# WORDPRESS (Headless CMS)
# ==================================================
NEXT_PUBLIC_WP_URL=http://localhost:8080
NEXT_PUBLIC_WP_API_URL=http://localhost:8080/wp-json
WP_API_USERNAME=admin
WP_API_PASSWORD=your-wp-password

# ==================================================
# R SHINY DASHBOARDS
# ==================================================
NEXT_PUBLIC_SHINY_URL=http://localhost:3838
SHINY_API_TOKEN=your-shiny-token

# ==================================================
# BASE DE DATOS (PostgreSQL)
# ==================================================
DATABASE_URL=postgresql://user:password@localhost:5432/omipyme
POSTGRES_USER=omipyme_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=omipyme

# ==================================================
# AUTENTICACIÓN Y SEGURIDAD
# ==================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here
JWT_SECRET=your-jwt-secret-key-here

# ==================================================
# OAUTH PROVIDERS (Opcional)
# ==================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==================================================
# EMAIL (SendGrid, AWS SES, etc.)
# ==================================================
EMAIL_FROM=noreply@omipyme.uned.ac.cr
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
SENDGRID_API_KEY=your-sendgrid-api-key

# ==================================================
# ALMACENAMIENTO (AWS S3, Cloudinary, etc.)
# ==================================================
AWS_S3_BUCKET=omipyme-assets
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ==================================================
# ANALYTICS
# ==================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MATOMO_URL=https://analytics.uned.ac.cr
NEXT_PUBLIC_MATOMO_SITE_ID=1

# ==================================================
# MAPAS Y GEOLOCALIZACIÓN
# ==================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# ==================================================
# FEATURES FLAGS
# ==================================================
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_USER_AUTH=true
NEXT_PUBLIC_ENABLE_SELFIE_DISTRITAL=true
NEXT_PUBLIC_ENABLE_PODCAST=false

# ==================================================
# DESARROLLO
# ==================================================
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_SHOW_DEBUG_INFO=false
